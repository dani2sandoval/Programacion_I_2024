<Window x:Class="SegundoParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="400" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Calculator" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="cantidad 1:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtcantidad1" Width="100" Margin="10 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="cantidad 2:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtcantidad2" Width="100" Margin="10 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Operacion:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmboperation" Width="100" Margin="10 0">
                    <ComboBoxItem Content="+"/>
                    <ComboBoxItem Content="-"/>
                    <ComboBoxItem Content="*"/>
                    <ComboBoxItem Content="/"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Calculate" Click="Button_Click" Width="100" Margin="0 20"/>
        </StackPanel>
    </Grid>
</Window>
