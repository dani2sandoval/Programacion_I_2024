<Window x:Class="SegundoParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="300" Width="400">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <TextBox x:Name="txtcantidad1" Width="100" Margin="5"/>
            <TextBox x:Name="txtcantidad2" Width="100" Margin="5"/>
            <ComboBox x:Name="cmboperacion" Width="100" Margin="5">
                <ComboBoxItem Content="+"/>
                <ComboBoxItem Content="-"/>
                <ComboBoxItem Content="*"/>
                <ComboBoxItem Content="/"/>
                <ComboBoxItem Content="potencia"/>
                <ComboBoxItem Content="raiz"/>
                <ComboBoxItem Content="seno"/>
                <ComboBoxItem Content="coseno"/>
                <ComboBoxItem Content="tangente"/>
            </ComboBox>
            <Button Content="Calcular" Click="Button_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
